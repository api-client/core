{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "API Client",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["ES2021", "DOM"],
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./build",
    "baseUrl": ".",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": false
  },
  "include": [
    "src/**/*",
    "index.ts",
    "browser.ts",
    "**/*.node.test.ts"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
